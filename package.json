{
  "name": "AxA",
  "private": true,
  "repository": "https://github.com/karpatkey/panic-button-app.git",
  "author": "karpatkey",
  "license": "LGPL-3.0",
  "workspaces": [
    "app",
    "docs"
  ],
  "scripts": {
    "start": "yarn workspace foreach -A -pi run start",
    "build": "yarn workspaces foreach -A -pt run build",
    "dev": "yarn workspaces foreach -A -pi run dev",
    "lint:staged": "lint-staged",
    "lint": "yarn lint:eslint && yarn lint:tsc",
    "lint:eslint": "eslint 'app/src/**/*.{ts,tsx}'",
    "lint:eslint:fix": "eslint --fix 'app/src/**/*.{ts,tsx}'",
    "lint:tsc": "tsc -p app/tsconfig.json",
    "prepare": "husky install",
    "commit": "git-cz",
    "bulk:positions": "NODE_PATH=./app/src ts-node --project ./app/tsconfig.json ./app/src/scripts/dump/positions.ts",
    "submodule:sync": "git submodule update --remote"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "8.56.0",
    "eslint-config-next": "14.0.4",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4",
    "tsc-files": "^1.1.4",
    "tsconfig-paths": "^4.2.0",
    "typescript": "5.3.3"
  },
  "lint-staged": {
    "app/src/**/*.+(js,ts,tsx)": [
      "eslint -c ./.eslintrc.json -cache --fix",
      "tsc-files -c ./app/tsconfig.json --noEmit"
    ],
    "app/src/**/*.{js,ts,tsx,css,md,json}": [
      "prettier --config ./.prettierrc --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "packageManager": "yarn@4.1.0"
}
